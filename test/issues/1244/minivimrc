set nocompatible
let &rtp = '~/.vim/bundle/vimtex,' . &rtp
let &rtp .= ',~/.vim/bundle/vimtex/after'
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

set shiftwidth=2
set expandtab

silent edit minimal.tex

silent normal! gg=G

for s:line in getline(1, '$')
  echon printf("%s\n", s:line)
endfor

quitall!
